datasource db {
    provider = "mongodb"
    url = "mongodb://root:root@localhost:27018/eq?authSource=admin"
}

generator client {
    provider = "prisma-client-js"
}

model phonebooks {
    id          String @id @map("_id") @default(auto()) @db.ObjectId
    numberId   String @unique
    phone       String @unique
    description String 
    createdAt   DateTime
    modifiedAt  DateTime?
    createdBy   String?
}

model users {
    id          String @id @map("_id") @default(auto()) @db.ObjectId
    userId      String @unique
    name        String @unique
    login       String @unique
    role        Role
    password    String 
    createdAt   DateTime
    modifiedAt  DateTime?
}

enum Role {
    reader
    admin
}